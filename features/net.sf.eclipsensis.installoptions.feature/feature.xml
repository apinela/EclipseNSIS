<feature
      id="net.sf.eclipsensis.installoptions.feature"
      label="%feature.name"
      version="1.0.0"
      provider-name="%provider.name"
      os="win32"
      ws="win32"
      arch="x86_64"
      image="%splash.image">
   <install-handler/>

   <description url="%description.url">
      %description.text
   </description>

   <copyright url="%copyright.url">
      %copyright.text
   </copyright>

   <license url="%license.url">
      %license.text
   </license>

   <url>
      <update label="%update.site.name" url="http://eclipsensis.sf.net/update"/>
      <discovery label="%update.site.name" url="http://eclipsensis.sf.net/update/"/>
   </url>

   <requires>
      <import plugin="net.sf.eclipsensis"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.gef"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.ui.editors"/>
      <import plugin="org.eclipse.ui.workbench.texteditor"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.core.expressions"/>
      <import plugin="org.eclipse.ui.views.properties.tabbed"/>
      <import plugin="net.sf.eclipsensis.startup"/>
   </requires>

   <plugin
         id="net.sf.eclipsensis.installoptions"
         os="win32"
         ws="win32"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
