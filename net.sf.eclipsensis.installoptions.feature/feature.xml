<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="net.sf.eclipsensis.installoptions"
      label="%feature.name"
      version="0.9.2"
      provider-name="%provider.name"
      os="win32"
      ws="win32"
      arch="x86"
      image="%splash.image">
   <install-handler/>

   <description url="%description.url">
      %description.text
   </description>

   <copyright url="%copyright.url">
      %copyright.text
   </copyright>

   <license url="%license.url">
      %license.text
   </license>

   <url>
      <update label="%update.site.name" url="http://eclipsensis.sf.net/update"/>
   </url>

   <requires>
      <import plugin="org.eclipse.core.runtime" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.gef" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.jface" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.views" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.resources" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.ide" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.editors" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.workbench.texteditor" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.jface.text" version="3.1.0" match="greaterOrEqual"/>
      <import plugin="net.sf.eclipsensis" version="0.9.2" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="net.sf.eclipsensis.installoptions"
         download-size="1000"
         install-size="1000"
         version="0.9.2"
         unpack="false"/>

</feature>
